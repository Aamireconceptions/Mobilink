<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_255sdp">



            <ImageView
                android:id="@+id/detail_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_255sdp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="@color/banner"/>



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/custom_progress"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/ll_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="@color/transparent_black">

                <RelativeLayout
                    android:id="@+id/brand_logo_layout"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/business_border">

                    <ImageView
                        android:id="@+id/brand_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/brand_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAllCaps="true" />



                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/directions_layout"
                    android:layout_toEndOf="@+id/brand_logo_layout"
                    android:layout_alignTop="@+id/brand_logo_layout"
                    android:layout_alignBottom="@+id/brand_logo_layout"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_8sdp"
                    >



                    <TextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true" android:gravity="top"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/brand_address"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:maxLines="2"/>

                    <RatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/deal_rating_bar"
                        style="?android:attr/ratingBarStyleSmall"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/directions_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:background="@color/transparent_white"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/directions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/_4sdp"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/ic_directions_big" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/_8sdp"
            android:gravity="center"
            android:background="@drawable/detail_actions_bg">
            <TableRow>
                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/ic_phone_active"/>
                <ImageView
                    android:id="@+id/iv_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/ic_white_report"/>
                <ImageView
                    android:id="@+id/iv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/ic_star_white"/>
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/ic_whtie_tag"/>
            </TableRow>
            <TableRow android:layout_marginBottom="15dp">
                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/call"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="REPORT"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/rate"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/discount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/last_redeemed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/_20sdp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/border_grey">

                <TextView
                    android:id="@+id/discount_availed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    android:text="Discount availed "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_stamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="on 24 May 16 at 3:09pm"
                    android:textColor="@color/black"/>

            </LinearLayout>



            <TextView
                android:id="@+id/prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_discount"
                android:drawablePadding="@dimen/_18sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:textColor="#787878"
                android:background="@drawable/border_grey"/>

            <TextView
                android:id="@+id/validity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                android:drawableStart="@drawable/ic_calander"
                android:drawablePadding="@dimen/_18sdp"
                android:gravity="center_vertical"
                android:textColor="#787878"
                android:background="@drawable/border_grey"/>

            <TextView
                android:id="@+id/how_this_work_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                android:gravity="center_vertical"
                android:text="@string/how_this_works"
                android:drawableStart="@drawable/ic_how"
                android:drawablePadding="@dimen/_18sdp"
                android:textColor="#787878"
                android:visibility="gone"
                android:background="@drawable/border_grey"/>

            <LinearLayout
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/head_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/head_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:textSize="12sp"
                    android:textColor="#787878"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical"
                android:visibility="gone">
            <Button
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Get Discount"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:background="@drawable/btn_red_ripple"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/vouchers_claimed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center_horizontal"
                android:textColor="#787878"
                android:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tos_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="center_horizontal"
                android:text="@string/tos_note"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/gallery_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/border_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/gallery_items_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gallery"
                    android:textAllCaps="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:textColor="#787878"/>

                    <TextView
                        android:id="@+id/view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:text="View All"
                        android:textColor="#787878"/>

                </LinearLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:layout_height="@dimen/_96sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/brochure_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:minHeight="@dimen/_50sdp"
                android:background="@drawable/border_grey"
                android:visibility="gone">

            <TextView
                android:id="@+id/brochure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/download"
                android:layout_marginTop="2dp"

                android:text="View brochure"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/_18sdp"
                android:textColor="#787878"
                android:drawableStart="@drawable/ic_pdf"
                android:visibility="visible"/>

                <ImageView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_download"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:titleMarginEnd="@dimen/_40sdp"
        android:background="@color/red"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/share"
        android:src="@drawable/ic_share"/>
    </android.support.v7.widget.Toolbar>


    </RelativeLayout>

    </ScrollView>