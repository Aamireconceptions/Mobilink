<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_90sdp"
    android:paddingBottom="@dimen/_90sdp"
    android:background="@drawable/subscription_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_centerInParent="true">



        <TextView
            android:id="@+id/free_trial_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Subscription charges"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:background="#EDEDED"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/post_paid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/free_trial_note"
            android:gravity="center"
            android:padding="@dimen/_16sdp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/charges_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="1.5"
                android:textColor="#7A7A7A"
                android:text="Jazz Post Paid"/>

            <TextView
                android:id="@+id/charges_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1.5"
                android:gravity="right"
                android:textColor="#878787"
                android:text="Rs 35.85/month"/>

        </LinearLayout>

        <View
            android:id="@+id/separator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/post_paid_layout"
            android:background="#DBDBDB"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_22sdp"
            android:layout_below="@+id/separator_1"
            android:background="@color/white">

            <Button
                android:id="@+id/btn_subscribe"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:alpha="1.0"
                android:background="#ED1B24"
                android:gravity="center"
                android:text="@string/SUBSCRIBE"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>
