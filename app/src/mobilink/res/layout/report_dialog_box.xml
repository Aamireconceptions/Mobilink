<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_white_rounded"
    android:gravity="center">

    <TextView
        android:id="@+id/title_reportBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:text="Report"
android:textAllCaps="true"
        android:textSize="19sp"
        android:visibility="visible"/>


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title_reportBox"
        android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/someOther_radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:padding="10dp"
        android:text="Outlet has refused to offer discount"
        />
    <RadioButton
        android:id="@+id/other_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:padding="10dp"
        android:layout_below="@+id/someOther_radioButton"
        android:text="Other"/>
    </RadioGroup>
    <EditText
        android:id="@+id/enterReport_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter short text here..."
        android:paddingTop="20dp"
        android:visibility="gone"
        android:layout_below="@+id/radioGroup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterReport_editText"
        android:layout_marginTop="12dp"
        android:gravity="center">


        <Button
            android:id="@+id/reportButton_report_dialog_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
        android:layout_below="@+id/radioGroup"

        android:text="Send Report"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_red_ripple"
            android:visibility="visible"/>

    </LinearLayout>


</RelativeLayout>
