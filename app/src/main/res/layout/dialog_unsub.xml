<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_white_rounded"
        android:padding="25dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.95"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/Unsubscribe_Bizstore"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_title"
            android:gravity="center"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="115dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/btn_dark_red"
            android:gravity="center"
            android:text="@string/No"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textScaleX="1.1"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_unsub"
            android:layout_width="115dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/tv_title"
            android:layout_marginStart="0dp"
            android:layout_toRightOf="@+id/btn_cancel"
            android:background="@drawable/btn_lt_grey"
            android:gravity="center"
            android:text="@string/Yes"
            android:textAllCaps="true"
            android:textColor="@color/home_heading_text"
            android:textScaleX="0.9"
            android:textSize="16sp"
            android:textStyle="normal"/>

        </LinearLayout>

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_buttons"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/unsub_details"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>
