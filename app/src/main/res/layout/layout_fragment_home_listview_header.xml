<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp">

        <android.support.v4.view.ViewPager
            android:id="@+id/featured_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/feature_banner"/>

        <com.ooredoo.bizstore.ui.CirclePageIndicator
            android:id="@+id/featured_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_12sdp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/top_deals"
        android:textAllCaps="true"
        android:typeface="serif"
        android:textColor="@color/home_heading_color" />

    <include layout="@layout/layout_horizontal_top_deals" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp">

        <android.support.v4.view.ViewPager
            android:id="@+id/promo_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/feature_banner"/>

        <com.ooredoo.bizstore.ui.CirclePageIndicator
            android:id="@+id/promo_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_12sdp"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/top_brands"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/top_brands_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/health_fitness"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <include layout="@layout/layout_horizontal_health_fitness"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/top_malls"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/top_malls_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp" />

    <!--<include layout="@layout/layout_horizontal_top_malls"/>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/entertainment"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <include layout="@layout/layout_horizontal_entertainment"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:text="@string/deals_of_the_day"
        android:textAllCaps="true"
        android:typeface="serif"/>

</LinearLayout>