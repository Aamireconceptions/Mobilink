<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/ll_top_deals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_25sdp"
        android:paddingBottom="@dimen/_25sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/entertainment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:drawableTop="@drawable/entertainment"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/entertainment"
            android:textColor="@color/home_category_item"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_1sdp"
            android:drawableTop="@drawable/shopping"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/shopping"
            android:textColor="@color/home_category_item"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/fashion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:drawableTop="@drawable/fashion"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/fashion"
            android:textColor="@color/home_category_item"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/restaurants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_6sdp"
            android:drawableTop="@drawable/restaurants"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/restaurants"
            android:textColor="@color/home_category_item"/>

    </LinearLayout>

</HorizontalScrollView>