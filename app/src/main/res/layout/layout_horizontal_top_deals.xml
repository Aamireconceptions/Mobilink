<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_30sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/entertainment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:drawableTop="@drawable/entertainment"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/entertainment"
            android:textColor="@color/home_category_item_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/shopping"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:drawableTop="@drawable/shopping"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/shopping"
            android:textColor="@color/home_category_item_color"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/fashion"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:drawableTop="@drawable/fashion"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/fashion"
            android:textColor="@color/home_category_item_color"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:src="@drawable/horizontal_separator"/>

        <TextView
            android:id="@+id/restaurants"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_16sdp"
            android:drawableTop="@drawable/restaurants"
            android:drawablePadding="@dimen/_4sdp"
            android:text="@string/restaurants"
            android:textColor="@color/home_category_item_color"/>

    </LinearLayout>

</HorizontalScrollView>