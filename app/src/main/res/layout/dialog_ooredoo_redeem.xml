<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        android:layout_margin="@dimen/_12sdp"
        android:padding="@dimen/_18sdp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bizstore"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:text="@string/congrats"
            android:textSize="20sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/discount_availed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/congrats"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/discount_availed"/>

        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount_availed"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/red_bg_transparent"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:minHeight="@dimen/_80sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/brand_logo"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_border"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/deal_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_8sdp" />


        </LinearLayout>

          <RelativeLayout
              android:id="@+id/unique_id_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/logo_layout"
              android:padding="@dimen/_8sdp"
              android:background="@drawable/grey_bg_side_border">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Unique ID: "
                  android:textSize="12sp"/>

              <TextView
                  android:id="@+id/unique_id"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:textSize="12sp"/>



          </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_date_layout"
            android:layout_below="@+id/unique_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/white_bg_side_border">


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_date"
                android:text="29 Jun 2016"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_time"
                android:layout_alignParentEnd="true"
                android:text="12:45 PM"
                android:gravity="center_vertical"
                android:drawablePadding="6dp"
                android:textSize="12sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_date_layout"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
           android:layout_centerHorizontal="true"
            android:visibility="visible">

            <Button
                android:id="@+id/share_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:minWidth="@dimen/_100sdp"
                android:background="@drawable/twitter_button"
                android:text="Make a tweet"
                android:textAllCaps="true"
                android:layout_alignTop="@+id/share_fb"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/share_fb"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/share_twitter"

                android:background="@drawable/fb_button"
                android:text="Check in with facebook"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close_btn"/>



</RelativeLayout>