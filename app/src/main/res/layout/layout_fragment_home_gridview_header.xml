<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_featured_deals"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_weight="4"/>

    <com.ooredoo.bizstore.ui.CirclePageIndicator
        android:id="@+id/indicator_featured_deals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        android:layout_marginTop="-20dp"
        android:padding="4dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/top_deals"
        android:textAllCaps="true"
        android:textColor="@color/home_heading_color"
        android:typeface="serif"/>

    <include layout="@layout/layout_horizontal_top_deals"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_promo_deals"
        android:layout_width="match_parent"
        android:layout_height="235dip"
        android:layout_weight="1"/>

    <com.ooredoo.bizstore.ui.CirclePageIndicator
        android:id="@+id/indicator_promo_deals"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        android:layout_marginTop="-20dp"
        android:padding="4dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/top_brands"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_top_brands"
        android:layout_width="match_parent"
        android:layout_height="111dip"
        android:layout_weight="1"/>

    <com.ooredoo.bizstore.ui.CirclePageIndicator
        android:id="@+id/indicator_top_brands"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_pager"
        android:layout_marginTop="-20dp"
        android:padding="4dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/health_fitness"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <include layout="@layout/layout_horizontal_health_fitness"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/top_malls"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/entertainment"
        android:textAllCaps="true"
        android:typeface="serif"/>

    <include layout="@layout/layout_horizontal_entertainment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_12sdp"
        android:paddingLeft="@dimen/_18sdp"
        android:paddingRight="@dimen/_18sdp"
        android:paddingTop="@dimen/_12sdp"
        android:text="@string/deals_of_the_day"
        android:textAllCaps="true"
        android:typeface="serif"/>

</LinearLayout>