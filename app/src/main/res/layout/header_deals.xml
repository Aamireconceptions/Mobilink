<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp"
    android:layoutDirection="ltr"
    android:visibility="gone">

    <Button
        android:id="@+id/new_deals"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/new_deals"
        android:textAllCaps="false"
        android:textColor="@color/black_white_selector"
        android:background="@drawable/bt_tab_style_left_selector"/>

    <Button
        android:id="@+id/popular_deals"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_34sdp"
        android:layout_toRightOf="@+id/new_deals"
        android:layout_centerVertical="true"
        android:text="@string/popular_deals"
        android:textAllCaps="false"
        android:textColor="@color/black_white_selector"
        android:background="@drawable/bt_tab_style_right_selector"/>

    <ImageView
        android:id="@+id/filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_filter_default"/>

</RelativeLayout>