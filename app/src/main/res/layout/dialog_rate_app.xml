<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_white_rad10_corn10"
        android:padding="25dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.95"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/rate_us"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:background="@drawable/btn_dark_red"
            android:gravity="center"
            android:text="@string/No"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <Button
            android:id="@+id/btn_unsub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/btn_cancel"
            android:background="@drawable/btn_lt_grey"
            android:gravity="center"
            android:text="@string/Yes"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_cancel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/unsub_details"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>
