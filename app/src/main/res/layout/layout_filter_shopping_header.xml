<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/header"
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp"
                android:visibility="visible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"

        android:layoutDirection="ltr"
        android:visibility="visible">

        <Button
            android:id="@+id/new_deals"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_32sdp"

            android:layout_centerVertical="true"
            android:background="@drawable/bt_tab_style_left_selector"
            android:text="@string/new_deals"
            android:textAllCaps="false"
            android:textColor="@color/black_white_selector"/>

        <Button
            android:id="@+id/popular_deals"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/new_deals"
            android:background="@drawable/bt_tab_style_right_selector"
            android:text="@string/popular_deals"
            android:textAllCaps="false"
            android:textColor="@color/black_white_selector"/>



    </RelativeLayout>

    <Button
        android:id="@+id/filter"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_8sdp"

        android:background="@drawable/btn_red_rounded"
        android:gravity="center"
        android:text="@string/filter"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</RelativeLayout>