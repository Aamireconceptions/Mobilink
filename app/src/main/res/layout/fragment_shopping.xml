<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <Button
            android:id="@+id/new_deals"

            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/new_deals"
            android:textAllCaps="false"
            android:textColor="@color/black_white_selector"
            android:background="@drawable/bt_tab_style_left_selector"/>

        <Button
            android:id="@+id/popular_deals"
            android:layout_width="@dimen/_115sdp"
            android:layout_height="@dimen/_34sdp"
            android:layout_toRightOf="@+id/new_deals"
            android:layout_centerVertical="true"
            android:text="@string/popular_deals"
            android:textAllCaps="false"
            android:textColor="@color/black_white_selector"
            android:background="@drawable/bt_tab_style_right_selector"/>

        <ImageView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_filter_default"/>

    </RelativeLayout>

    <GridView
        android:id="@+id/shopping_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/_6sdp"
        android:horizontalSpacing="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:numColumns="2" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"/>


</RelativeLayout>
